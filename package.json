{
    "name": "minimal.css",
    "version": "0.6.5",
    "description": "An easy to use and simple minimal CSS framework",
    "main": "minimal.css",
    "scripts": {
        "build": "powershell # Run \"npm run build-win\" on Windows or \"npm run build-nix\" for macOS and Linux",
        "build-win": "powershell ./build_res/build.ps1 --release",
        "build-nix": "./build_res/build.sh --release",
        "clean": "powershell # Run \"npm run clean-win\" on Windows or \"npm run clean-nix\" for macOS and Linux",
        "clean-win": "powershell ./build_res/build.ps1 --clean",
        "clean-nix": "./build_res/build.sh --clean"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/HereIsKevin/minimal.css"
    },
    "author": "Kevin Feng",
    "license": "AGPL-3.0-or-later",
    "bugs": {
        "url": "https://github.com/HereIsKevin/minimal.css/issues"
    },
    "homepage": "https://github.com/HereIsKevin/minimal.css#readme",
    "devDependencies": {
        "clean-css": "^4.2.1",
        "clean-css-cli": "^4.3.0",
        "html-minifier": "^4.0.0",
        "sass": "^1.22.9",
        "terser": "^4.1.3"
    },
    "dependencies": {}
}
